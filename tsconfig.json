{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "lib": [
      "dom",
      "es6"
    ]
  },
  "exclude" : [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
